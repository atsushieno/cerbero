class Recipe(recipe.Recipe):
    name = 'mda-lv2'
    version = '1.2.2'
    licenses = [{License.BSD_like: ['COPYING']}]
    btype = BuildType.CUSTOM
    stype = SourceType.TARBALL
    url = 'https://download.drobilla.net/mda-lv2-1.2.2.tar.bz2'
    tarball_checksum = 'a476c31ed9f8b009ebacc32a02d06ba9584c0d0d03f03dd62b1354d10a030442'
    deps = ['lv2']

    def configure(self):
        shell.call ('cd ' + os.path.join(self.build_dir) + ' && ./waf configure --prefix=' + self.config.prefix)

    def install(self):
        shell.call ('cd ' + os.path.join(self.build_dir) + ' && ./waf build install')
        # remove symbolic links
        #shell.call ('cd ' + os.path.join(self.config.prefix, 'lib') + ' && mv liblilv-0.so.0.24.4 liblilv-0.so && rm liblilv-0.so.*')

    def clean(self):
        shell.call ('cd ' + os.path.join(self.build_dir) + ' && ./waf clean')

